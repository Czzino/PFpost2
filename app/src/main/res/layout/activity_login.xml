<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#F2F2F2"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:minHeight="?attr/actionBarSize"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:theme="?attr/actionBarSize"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/toolbar"
            android:src="@drawable/introac"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"/>






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/shape_line"
                android:layout_below="@+id/iv">


        <TextView
            android:id="@+id/tv_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="I D"
            android:textSize="30sp"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"/>



        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력하세요"
            android:layout_toRightOf="@+id/tv_id"
            android:layout_alignBottom="@+id/tv_id"
            android:inputType="text"
            android:lines="1"
            android:singleLine="true" />



        <TextView
            android:id="@+id/tv_pw"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PW"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="#FF000000"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/tv_id"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/tv_id"/>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="패스워드를 입력하세요"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_pw"
            android:layout_alignBottom="@+id/tv_pw"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true" />




        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="#FFFFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="#5D5D5D"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/et_pw"
            android:onClick="clickLogin"/>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#FFFFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:background="#5D5D5D"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_login"
            android:onClick="clickRegister"/>
            </RelativeLayout>
    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>