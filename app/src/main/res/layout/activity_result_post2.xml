<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ResultPost2">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFAAAAAA"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_information1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기본정보"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>


    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_information1"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_line">


        <TextView
            android:id="@+id/tv_company"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="택배사"
            android:textColor="#96A6A4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_val"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_company"
            android:gravity="bottom"
            android:text="CJ 대한통운"
            android:textColor="#FF000000"
            android:textSize="15sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_company"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#FFAAAAAA" />

        <TextView
            android:id="@+id/tv_company2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="송장번호"
            android:textColor="#96A6A4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company2_val"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company_val"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_company2"
            android:gravity="bottom"
            android:text="6487194020"
            android:textColor="#FF000000"
            android:textSize="15sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_company2"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#FFAAAAAA" />

        <TextView
            android:id="@+id/tv_company3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="상품정보"
            android:textColor="#96A6A4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_val3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_company3"
            android:gravity="bottom"
            android:text="일회용 마스크 50매"
            android:textColor="#FF000000"
            android:textSize="15sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_company3"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"

            android:background="#FFAAAAAA" />

        <TextView
            android:id="@+id/tv_company4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company_val3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="보내는 분"
            android:textColor="#96A6A4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_val4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company_val3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_company4"
            android:gravity="bottom"
            android:text="강희수"
            android:textColor="#FF000000"
            android:textSize="15sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_company4"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"

            android:background="#FFAAAAAA" />

        <TextView
            android:id="@+id/tv_company5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company4"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="받는 분"
            android:textColor="#96A6A4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_company_val5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_company_val4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_company4"
            android:gravity="bottom"
            android:text="이상철"
            android:textColor="#FF000000"
            android:textSize="15sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_information2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태정보"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/rela1"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>


    <RelativeLayout
        android:id="@+id/rela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_line"
        android:layout_below="@+id/tv_information2">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="처리일시"
            android:gravity="center_vertical"
            android:background="#F4F0F0"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_date"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:background="#F4F0F0"
            android:text="상품상태"
            android:textColor="#FF000000"/>

        <View
            android:id="@+id/v2_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/tv_text"/>

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:maxLines="2"
            android:layout_below="@+id/v2_1"
            android:text="2020-06-23 17:43:36"
            android:textColor="#FF000000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_below="@+id/tv_text"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="상품을 인수하였습니다."
            android:textColor="#FF000000"/>

        <View
            android:id="@+id/v2_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tv_date2"
            android:background="#FFAAAAAA" />
        <TextView
            android:id="@+id/tv_date3"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="2020-06-24 06:57:23"
            android:maxLines="2"
            android:layout_below="@+id/v2_2"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_below="@+id/v2_2"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="택배 상품이 이동중입니다."
            android:textColor="#FF000000"/>

        <View
            android:id="@+id/v2_3"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/tv_text3"/>
        <TextView
            android:id="@+id/tv_date4"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="2020-06-24 13:03:56"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_below="@+id/v2_3"
            android:textSize="16sp"
            android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/tv_text4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_date4"
            android:layout_below="@+id/v2_3"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="배송이 출발했습니다."
            android:textColor="#FF000000"/>

        <View
            android:id="@+id/v2_4"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/tv_text4"/>

        <TextView
            android:id="@+id/date5"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="2020-06-24 17:12:06"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_below="@+id/v2_4"
            android:textSize="16sp"
            android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv_date4"
            android:layout_below="@+id/v2_4"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="상품이 도착했습니다."
            android:layout_marginBottom="5dp"
            android:textColor="#FF000000"/>



    </RelativeLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="확 인"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:background="#489CFF"
        android:textSize="20sp"
        android:onClick="clickCheck"
        android:layout_centerInParent="true"
        android:layout_below="@id/rela2"
        android:layout_marginTop="20sp"/>


</RelativeLayout>