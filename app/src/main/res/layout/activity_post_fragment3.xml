<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostFragment1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#489CFF"
        android:theme="@style/TabTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑몰"
            android:layout_gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:padding="20dp"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_llst"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/llst"/>

        <View
            android:id="@+id/v1"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/iv_llst"/>

        <TextView
            android:id="@+id/tv_llst"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="11번가"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_llst"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_11st"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_llst"
            android:background="@drawable/ic_home_blue_24dp"/>

        <ImageView
            android:id="@+id/iv_hmall"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/v1"
            android:src="@drawable/hmall"/>


        <View
            android:id="@+id/v2"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/iv_hmall"/>

        <TextView
            android:id="@+id/tv_hmall"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="현대/Hmall"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_hmall"
            android:layout_below="@+id/v1"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_hmall"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_hmall"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/v1"
            android:background="@drawable/ic_home_blue_24dp"/>
        <ImageView
            android:id="@+id/iv_sinsaegye"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/v2"
            android:src="@drawable/sinsaegye"/>


        <View
            android:id="@+id/v3"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/iv_sinsaegye"/>

    <TextView
        android:id="@+id/tv_sinsaegye"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/v2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_llst"
        android:gravity="center"
        android:text="신세계몰/이마트"
        android:textColor="#FF000000"
        android:textSize="19sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sinsaegye"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@+id/v2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv_llst"
            android:background="@drawable/ic_home_blue_24dp"/>
        <ImageView
            android:id="@+id/iv_lotte"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/v3"
            android:src="@drawable/lotte"/>


        <View
            android:id="@+id/v4"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/iv_lotte"/>

    <TextView
        android:id="@+id/tv_lotte"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/v3"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_llst"
        android:gravity="center"
        android:text="롯데닷컴"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_lotte"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@id/v3"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_llst"
        android:background="@drawable/ic_home_blue_24dp" />

    <ImageView
            android:id="@+id/iv_auction"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/v4"
            android:src="@drawable/auction"/>


        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#FFAAAAAA"
            android:layout_below="@+id/iv_auction"/>

        <TextView
            android:id="@+id/tv_auction"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="옥션"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/v4"
            android:textColor="#FF000000"
            android:layout_toRightOf="@+id/iv_llst"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_action"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@+id/v4"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_auction"
            android:background="@drawable/ic_home_blue_24dp"/>


</RelativeLayout>

</LinearLayout>